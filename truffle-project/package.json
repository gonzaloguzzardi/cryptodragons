{
  "name": "truffle-project",
  "description": "Simple example of Truffle interacting with Loom DappChain",
  "scripts": {
    "truffle": "truffle",
    "run:bfa": "./scripts/run_bfa.sh",
    "deploy:bfa": "truffle deploy --network bfa",
    "deploy:reset:bfa": "truffle deploy --reset --network bfa",
    "run:loom": "./scripts/run_loom.sh",
    "deploy:loom": "truffle deploy --reset --network loom_dapp_chain",
    "deploy:reset:loom": "truffle deploy --reset --network loom_dapp_chain",
    "deploy:extdev": "truffle deploy --network extdev_plasma_us1",
    "deploy:reset:extdev": "truffle deploy --reset --network extdev_plasma_us1",
    "deploy:rinkeby": "truffle deploy --network rinkeby",
    "deploy:reset:rinkeby": "truffle deploy --reset --network rinkeby",
    "test": "truffle test --network loom_dapp_chain",
    "test:extdev": "truffle test --network extdev_plasma_us1",
    "serve:extdev": "NETWORK=extdev yarn run serve",
    "gen:extdev-key": "npm run get:loom && ./loom/loom genkey -k ./misc/extdev_private_key -a ./misc/extdev_private_key",
    "gen:loom-key": "npm run get:loom && ./loom/loom genkey -k ./misc/loom_private_key -a ./misc/loom_private_key",
    "loom:init": "cd loom && chmod +x loom && ./loom init -f && cd ..",
    "mainchain-cli": "nodemon --inspect=9222 ./mainchain-cli.js",
    "sidechain-cli": "nodemon --inspect=9229 ./sidechain-cli.js",
    "lint-fix": "eslint --fix ."
  },
  "dependencies": {
    "bip39": "^3.0.2",
    "bn.js": "^4.11.8",
    "commander": "^2.18.0",
    "ethereumjs-tx": "^1.3.7",
    "ethereumjs-wallet": "^0.6.2",
    "js-sha256": "^0.9.0",
    "keythereum": "^1.0.4",
    "loom-js": "1.55.0",
    "loom-truffle-provider": "^0.11.0",
    "openzeppelin-solidity": "^2.3.0",
    "truffle": "^5.0.1",
    "truffle-hdwallet-provider": "^1.0.2",
    "truffle-privatekey-provider": "^1.3.0",
    "body-parser": "latest"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/runtime": "^7.0.0-beta.46",
    "@rimiti/express-async": "^1.2.0",
    "axios": "latest",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.0-beta.2",
    "cors": "2.8.5",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "prettier": "^2.0.4",
    "regenerator-runtime": "^0.11.1",
    "request-promise": "^4.2.2",
    "web3": "1.0.0-beta.37"
  }
}
