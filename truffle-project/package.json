{
	"name": "truffle-project",
	"description": "Launch Blockchains & Deploy of Smarts Contracts",
	"scripts": {
		"truffle": "truffle",
		"run:bfa": "./scripts/run_bfa.sh",
		"deploy:bfa": "MAINCHAIN_URL=localhost truffle deploy --network bfa",
		"deploy:reset:bfa": "MAINCHAIN_URL=localhost truffle deploy --reset --network bfa",
		"deploy:reset:bfa:docker": "MAINCHAIN_URL=bfa truffle deploy --reset --network bfa",
		"run:loom": "./scripts/run_loom.sh",
		"deploy:loom": "SIDECHAIN_URL=localhost truffle deploy --reset --network loom_dapp_chain",
		"deploy:reset:loom": "SIDECHAIN_URL=localhost truffle deploy --reset --network loom_dapp_chain",
		"deploy:reset:loom:docker": "SIDECHAIN_URL=loom truffle deploy --reset --network loom_dapp_chain",
		"test": "SIDECHAIN_URL=localhost truffle test --network loom_dapp_chain",
		"gen:loom-key": "npm run get:loom && ./loom/loom genkey -k ./misc/loom_private_key -a ./misc/loom_private_key",
		"loom:init": "cd loom && chmod +x loom && ./loom init -f && cd ..",
		"start-dev-mainchain-cli": "nodemon mainchain-cli.js",
		"start-dev-sidechain-cli": "nodemon sidechain-cli.js",
		"lint-fix": "eslint --fix .",
		"contracts-uml": "sol2uml -f png -o uml/contracts-uml ./contracts",
		"start-dev-contract-getter": "nodemon contractGetter.js",
		"contracts-uml-custom": "sol2uml -b DappchainTransferableDragon,DappchainGateway,DragonBase,DragonFactory,MainnetTransferableDragon -f png -o uml/contracts-uml-custom ./contracts"
	},
	"dependencies": {
		"axios": "latest",
		"bip39": "3.0.2",
		"body-parser": "latest",
		"cors": "2.8.5",
		"eth-json-rpc-filters": "4.1.1",
		"ethereumjs-tx": "1.3.7",
		"ethereumjs-wallet": "0.6.2",
		"express": "4.17.1",
		"js-sha256": "0.9.0",
		"keythereum": "1.0.4",
		"loom-js": "1.55.0",
		"loom-truffle-provider": "0.11.0",
		"openzeppelin-solidity": "2.3.0",
		"regenerator-runtime": "0.11.1",
		"truffle": "5.0.1",
		"truffle-hdwallet-provider": "1.0.2",
		"truffle-privatekey-provider": "1.3.0",
		"web3": "1.0.0-beta.37"
	},
	"devDependencies": {
		"eslint": "5.16.0",
		"eslint-config-airbnb": "18.1.0",
		"eslint-config-prettier": "6.7.0",
		"eslint-plugin-import": "2.20.2",
		"eslint-plugin-jsx-a11y": "6.2.3",
		"eslint-plugin-prettier": "3.1.1",
		"eslint-plugin-react": "7.19.0",
		"nodemon": "2.0.2",
		"prettier": "2.0.4",
		"sol2uml": "^1.1.18"
	}
}
