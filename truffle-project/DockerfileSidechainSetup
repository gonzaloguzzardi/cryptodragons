# Base Image
FROM node:10.19.0

# Set the working directory
RUN mkdir -p /usr/src/app/side-sv
WORKDIR /usr/src/app/side-sv

# add `/app/node_modules/.bin` to $PATH
ENV PATH /usr/src/app/side-sv/node_modules/.bin:$PATH

# Copy your app's source code from your host to your image filesystem.
COPY . .
RUN if test -d node_modules; then rm -r node_modules; fi
RUN if test -d src/contracts; then rm -r src/contracts; fi

# Run the command inside your image filesystem
RUN apt-get update
RUN apt-get install libudev-dev -y
RUN apt-get install libusb-1.0-0-dev -y
RUN npm install --silent

# Inform Docker that the container is listening on the specified port at runtime.
EXPOSE 8001

# Run the specified command within the container.
CMD npm run deploy:reset:loom:docker
